properties([pipelineTriggers([githubPush()])])


pipeline {
parameters {
        string(name: 'environment', defaultValue: 'dev', description: 'Branch')
        string(name: 'workspace', defaultValue: 'Petclinic', description: 'Folder')
        string(name: 'version', defaultValue: '1', description: 'Version')
    }
    environment {
        DOCKER_USER       =   credentials('docker_user')
        DOCKER_PASS       =   credentials('docker_pass')
    }
    agent {
        node {
            label 'build-server'
        }
    }
    stages {
        stage('Build') {
            steps {
                dir("${workspace}") {
                    sh 'chmod +x mvnw'
                    sh './mvnw package'
                }
            }
        }
        stage('Test'){
            steps {
                 dir("${workspace}") {
                    sh './mvnw test'
                }
            }
        
        }
        stage('Create image'){
            steps{
                 dir("${workspace}") {
                    sh('docker')

                    sh('docker build -t petclinic:${version} .')
                    sh 'docker images'
                }   
            }
        }
        stage('Push'){
            steps{
                 dir("${workspace}") {

                    sh('echo $DOCKER_PASS | docker login -u $DOCKER_USER --password --password-stdin .')
                    sh('docker push reinz12/petclinic')
                }   
            }
        }
    }
}
        
